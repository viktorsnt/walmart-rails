<p id="notice"><%= notice %></p>

<h1>Listing Shopping Carts</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Total</th>
      <th>Subtotal</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_carts.each do |shopping_cart| %>
      <tr>
        <td><%= shopping_cart.status %></td>
        <td><%= shopping_cart.total %></td>
        <td><%= shopping_cart.subtotal %></td>
        <td><%= shopping_cart.discount %></td>
        <td><%= link_to 'Show', shopping_cart %></td>
        <td><%= link_to 'Edit', edit_shopping_cart_path(shopping_cart) %></td>
        <td><%= link_to 'Destroy', shopping_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

